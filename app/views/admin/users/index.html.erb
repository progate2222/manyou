<br>
<h1>管理画面のユーザー一覧</h1>
<br>
<div><%= link_to 'ユーザー登録', new_admin_user_path,class:"new btn" %></div>
<table>
  <thead>
    <tr>

      <p><%= @users.length %>件のユーザーが表示されています</p>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>パスワード</th>
      <th>管理者権限 </th>
      <th>タスク登録数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.admin %></td>
        <td><%= user.tasks.count %>件</td>
        <td><%= link_to '詳細', admin_user_path(user) %></td>
        <td><%= link_to '編集', edit_admin_user_path(user) %></td>
        <td><%= link_to '削除', admin_user_path(user) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
